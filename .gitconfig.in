[user]
	name = Palmer Dabbelt
	email = palmer@dabbelt.com
	signingkey = palmer@dabbelt.com

[sendemail]
	smtpencryption = tls
	smtpserver = /home/palmer/.local/bin/mhng-pipe-comp_stdin

[push]
	default = simple

[pull]
	ff = only

[alias]
	lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
	fap = fetch --all --prune --verbose

[core]
	abbrev = 12

[pretty]
	fixes = Fixes: %h (\"%s\")

[rerere]
	enabled = true

[log]
	showSignature = true

[commit]
	gpgsign = true

[merge "merge-changelog"]
	name = GNU-style ChangeLog merge driver
	driver = /usr/bin/git-merge-changelog %O %A %B

[url "ssh://git@gitolite.kernel.org"]
	insteadOf = https://git.kernel.org
	insteadOf = http://git.kernel.org
	insteadOf = git://git.kernel.org

[url "ssh://git@github.com"]
	insteadOf = https://github.com
	insteadOf = http://github.com
	insteadOf = git://github.com
